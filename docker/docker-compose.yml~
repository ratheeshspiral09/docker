mysql:
  image: mysql:latest
  ports:
   - "3307:3306"
  environment:
    MYSQL_DATABASE: test
    MYSQL_ROOT_PASSWORD: root
  volumes:
   - /var/lib/mysql

php:
  image: nmcteam/php56
  volumes:
    - ./src/php-fpm.conf:/etc/php5/fpm/php-fpm.conf
    - ./src:/var/www 
  links:
    - mysql

web:
  image: tutorial/nginx
  ports:
    - "8888:80"
  volumes:
    - ./src:/var/www
    - ./src/vhost.conf:/etc/nginx/sites-enabled/vhost.conf
  links:
    - php

